        <tr>
            <th>Name</th>
            <th>Datum</th>
            <th>Anmelden?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var TestEvent in eventList)
        {
            <tr>
                <td>@TestEvent.name</td>
                <td>@TestEvent.date</td>
                <td><button>Anmelden</button></td>
            </tr>
        }
    </tbody>
</table>

